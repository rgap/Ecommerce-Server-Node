<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">Products</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {{#each products}}
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-4">
          {{#if this.title}}
            <h2 class="text-xl font-semibold mb-2">{{this.title}}</h2>
          {{/if}}
          
          {{#if this.id}}
            <p class="text-gray-600 mb-2"><span class="font-semibold">ID:</span> {{this.id}}</p>
          {{/if}}

          {{#if this.description}}
            <p class="text-gray-600 mb-4">{{this.description}}</p>
          {{/if}}

          {{#if this.price}}
            <p class="text-gray-800 font-bold mb-2">${{this.price}}</p>
          {{/if}}

          {{#if this.category}}
            <p class="text-gray-600 mb-2"><span class="font-semibold">Category:</span> {{this.category}}</p>
          {{/if}}

          {{#if this.stock}}
            <p class="text-gray-600 mb-2"><span class="font-semibold">Stock:</span> {{this.stock}}</p>
          {{/if}}

          {{#if this.status}}
            <p class="text-gray-600 mb-2"><span class="font-semibold">Status:</span> {{#if this.status}}Available{{else}}Unavailable{{/if}}</p>
          {{/if}}
        </div>
      </div>
    {{/each}}
  </div>
</div>
