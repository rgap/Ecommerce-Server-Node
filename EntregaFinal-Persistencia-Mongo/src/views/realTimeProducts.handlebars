<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">Productos en Tiempo Real</h1>
  <div class="flex flex-wrap md:flex-nowrap gap-6">
    <!-- Lista de Productos -->
    <div class="w-full md:w-2/3">
      <div id="product-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each products}}
          <div id="{{this.id}}" class="bg-white shadow-md rounded-lg overflow-hidden">
            <div class="p-4">
              {{#if this.title}}
                <h2 class="text-xl font-semibold mb-2">{{this.title}}</h2>
              {{/if}}

              {{#if this.id}}
                <p class="text-gray-600 mb-2"><span class="font-semibold">ID:</span> {{this.id}}</p>
              {{/if}}

              {{#if this.description}}
                <p class="text-gray-600 mb-4">{{this.description}}</p>
              {{/if}}

              {{#if this.price}}
                <p class="text-gray-800 font-bold mb-2">${{this.price}}</p>
              {{/if}}

              {{#if this.category}}
                <p class="text-gray-600 mb-2"><span class="font-semibold">Categoría:</span> {{this.category}}</p>
              {{/if}}

              {{#if this.stock}}
                <p class="text-gray-600 mb-2"><span class="font-semibold">Stock:</span> {{this.stock}}</p>
              {{/if}}

              {{#if this.status}}
                <p class="text-gray-600 mb-2"><span class="font-semibold">Estado:</span> {{#if this.status}}Disponible{{else}}No disponible{{/if}}</p>
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    <!-- Sección de Formularios -->
    <div class="w-full md:w-1/3 space-y-6">
      <!-- Formulario para Agregar Producto -->
      <form id="product-form" class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Agregar Producto</h2>
        <div class="mb-4">
          <label for="id" class="block text-gray-700 font-bold mb-2">ID:</label>
          <input type="text" id="id" name="id" class="w-full px-3 py-2 border rounded" value="123456" required />
        </div>
        <div class="mb-4">
          <label for="title" class="block text-gray-700 font-bold mb-2">Título:</label>
          <input type="text" id="title" name="title" class="w-full px-3 py-2 border rounded" value="Llave Inglesa" required />
        </div>
        <div class="mb-4">
          <label for="price" class="block text-gray-700 font-bold mb-2">Precio:</label>
          <input type="number" id="price" name="price" class="w-full px-3 py-2 border rounded" value="29.99" required />
        </div>
        <div class="mb-4">
          <label for="description" class="block text-gray-700 font-bold mb-2">Descripción:</label>
          <textarea id="description" name="description" class="w-full px-3 py-2 border rounded" required>Llave inglesa ajustable de acero.</textarea>
        </div>
        <div class="mb-4">
          <label for="category" class="block text-gray-700 font-bold mb-2">Categoría:</label>
          <input type="text" id="category" name="category" class="w-full px-3 py-2 border rounded" value="Herramientas" required />
        </div>
        <div class="mb-4">
          <label for="stock" class="block text-gray-700 font-bold mb-2">Stock:</label>
          <input type="number" id="stock" name="stock" class="w-full px-3 py-2 border rounded" value="50" required />
        </div>
        <div class="mb-4">
          <label for="status" class="block text-gray-700 font-bold mb-2">Estado:</label>
          <select id="status" name="status" class="w-full px-3 py-2 border rounded" required>
            <option value="true" selected>Disponible</option>
            <option value="false">No disponible</option>
          </select>
        </div>
        <div class="mb-4">
          <button type="submit" class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded">Agregar Producto</button>
        </div>
      </form>

      <!-- Formulario para Eliminar Producto -->
      <form id="remove-product-form" class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Eliminar Producto</h2>
        <div class="mb-4">
          <label for="productId" class="block text-gray-700 font-bold mb-2">ID del Producto:</label>
          <input type="text" id="productId" name="productId" class="w-full px-3 py-2 border rounded" required />
        </div>
        <div class="mb-4">
          <button type="submit" class="w-full bg-red-500 text-white font-bold py-2 px-4 rounded">Eliminar Producto</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>